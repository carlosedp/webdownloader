.page
  h2 Register

  form(method='post', action='/signup')
    div
      label Email:
      input(name='user[email]', value=user.email || '')
    div
      label Password:
      input(name='user[password]', value=user.password || '', type='password')
    div
      input(type='submit', value='Register')
      span \ or 
        a(href='/sessions/new') Log In


